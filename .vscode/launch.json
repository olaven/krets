{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "port": 9229
    }, 
    {
      "type": "node", 
      "request": "launch", 
      "name": "Test",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test"],
      "skipFiles": ["<node_internals>/**"],
      "port": 9229, 
"console": "integratedTerminal"
    }

  ]
}